	long[] arr = new long[](N);
	arr[0] = x[0];
	foreach(i; 1..N) {
		arr[i] = arr[i-1] + x[i];
	}
	ulong res;
	foreach_reverse(i; 1..N) {
		res += i*x[i] - arr[i-1];
	}
	res.writeln;
}

