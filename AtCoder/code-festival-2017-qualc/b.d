    auto N = ri;
    auto A = readAs!(int[]);
    
    ulong res;
    void dfs(int[] arr) {
        if(arr.length == N) {
            if(arr.any!(v => v % 2 == 0)) res++;
            return;
        }
        foreach(i; A[arr.length] - 1 .. A[arr.length] + 2) {
            dfs(arr ~ i);
        }
    }
    dfs([]);
    res.writeln;
}

